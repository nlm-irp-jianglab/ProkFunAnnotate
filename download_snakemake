rule
       mkdir -p ./test_data/
       mkdir ./test_data//kofam_data
       cd ./test_data//kofam_data/
       wget ftp://ftp.genome.jp/pub/db/kofam/ko_list.gz
       wget ftp://ftp.genome.jp/pub/db/kofam/profiles.tar.gz
       gunzip ko_list.gz > ko_list
       tar xf profiles.tar.gz
       rm ko_list.gz
       rm profiles.tar.gz

